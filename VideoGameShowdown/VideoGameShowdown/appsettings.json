{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // Secrets
  "SecretSettings": {
    "Azure": {
      "KeyVaultBaseUrl": "https://videogameshowdown.vault.azure.net",
      "SyncfusionProductKeyId": "SyncfusionProductKey",
      "RawgApiKeyId": "RawgApiKey"
    }
  },

  // RAWG Api
  "RawgApiSettings": {
    "ApiUrl": "https://api.rawg.io/api",
    "RequestTimeout": 45,
    "RetryLimit": 3,
    "Response_PageSize": 200000,
    "LocalCache_PollingInterval_Days": 32,
    "LocalCache_RelativePath": "RAWG_Data",
    "Endpoints": {
      "Games": "games"
    }
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    //"DevConnectionString": "Server=(local)\\sqlexpress;Database=VideoGameShowdown;Trusted_Connection=True;MultipleActiveResultSets=True;",
    "DevConnectionString": "Data Source=.\\SQLEXPRESS;Initial Catalog=VideoGameShowdown;Integrated Security=True;Connect Timeout=30;Encrypt=False;TrustServerCertificate=False;ApplicationIntent=ReadWrite;MultiSubnetFailover=False;",
    "ProdConnectionString": "<PROD-CONNECTION-STRING>"
  }
}
