{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // Secrets
  "SecretSettings": {
    "Azure": {
      "KeyVaultBaseUrl": "https://videogameshowdown.vault.azure.net",
      "SyncfusionProductKeyId": "SyncfusionProductKey",
      "RawgApiKeyId": "RawgApiKey"
    }
  },

  // RAWG Api
  "RawgApiSettings": {
    "ApiUrl": "https://api.rawg.io/api",
    "RequestTimeout": 30,
    "PollingInterval_Minutes": 360,
    "LocalCache_RelativePath": "RAWG_Data",
    "Endpoints": {
      "Games": "games"
    }
  },

  "AllowedHosts": "*"
}
